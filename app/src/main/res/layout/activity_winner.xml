<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADB8AC"

    tools:context=".Activity_Winner">


    <TextView
        android:id="@+id/winner_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="The Winner Is:"
        android:textSize="50sp"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/winner_LBL_playerWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/winner_LBL_title"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Player"
        android:textSize="40sp"
        android:textColor="@color/black"

    />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/trophy"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/winner_LBL_playerWin"

        />

    <TextView
        android:id="@+id/winner_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"

        android:text="Score: 00"
        android:textSize="40sp"
        android:textColor="@color/black"
        />


</RelativeLayout>